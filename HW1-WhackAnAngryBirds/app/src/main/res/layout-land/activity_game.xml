<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/text_view_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anton"
            android:text="SCORE : "
            android:textSize="20dp"
            android:layout_marginLeft="40dp" />

        <TextView
            android:id="@+id/score"
            android:layout_toRightOf="@+id/text_view_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:fontFamily="@font/anton"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/score"
            android:layout_alignParentRight="true"
            android:gravity="right">

                <ImageView
                    android:id="@+id/heart_img_3"
                    android:layout_width="38dp"
                    android:layout_height="31dp"
                    android:src="@drawable/heart" />
                <ImageView
                    android:id="@+id/heart_img_2"
                    android:layout_width="38dp"
                    android:layout_height="31dp"
                    android:src="@drawable/heart"
                    android:layout_toRightOf="@+id/heart_img_3" />

                <ImageView
                    android:id="@+id/heart_img_1"
                    android:layout_width="38dp"
                    android:layout_height="31dp"
                    android:src="@drawable/heart"
                    android:layout_toRightOf="@+id/heart_img_2"
                    android:layout_marginRight="40dp"/>


        </LinearLayout>


        <TextView
            android:id="@+id/text_view_time"
            android:layout_below="@+id/text_view_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIME : "
            android:fontFamily="@font/anton"
            android:textSize="20dp"
            android:layout_marginLeft="40dp" />

        <TextView
            android:id="@+id/timer"
            android:layout_below="@+id/text_view_score"
            android:layout_toRightOf="@+id/text_view_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:fontFamily="@font/anton"
            android:textSize="20dp" />
        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_below="@+id/text_view_time"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </GridLayout>

</RelativeLayout>