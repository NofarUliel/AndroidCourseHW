<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_over_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/title_game_over"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G A M E  O V E R"
        android:fontFamily="@font/anton"
        android:textSize="50dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/is_winner"
        android:layout_below="@+id/title_game_over"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/anton"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/score_txt"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/is_winner"
        android:gravity="left"
        android:text="score"
        android:textColor="@android:color/black"
        android:textSize="20dp"
       android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/life_txt"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/score_txt"
        android:layout_marginBottom="20dp"
        android:gravity="left"
        android:text="life"
        android:textColor="@android:color/black"
        android:textSize="20dp"
       android:layout_centerHorizontal="true"/>


    <Button
        android:id="@+id/new_game_btn"
        android:layout_width="149dp"
        android:layout_height="85dp"
        android:layout_below="@+id/life_txt"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="ClickNewGame"
        android:text="new game"
        android:textColor="#ffff"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/icon_app"
        android:layout_marginRight="20dp"/>


</RelativeLayout>